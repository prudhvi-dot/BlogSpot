<!DOCTYPE html>
<html lang="en">
<head>
   <%- include('./partials/head')  %>
   <link rel="stylesheet" href="/style.css">
   <style>
    .container{
      height: 80vh;
    }
    .btn{
      margin-top: 25px;
    }
   </style>
</head>
<body>
    <%- include('./partials/nav')  %>

    <div class="container mt-4 d-flex justify-content-center align-items-center">
        <form action="/user/signin" method="POST" novalidate class="needs-validation">
            <% if(msg!=''){ %>
                <div class="alert alert-danger" role="alert"><img src="/images/error.png" width="20px"> <span><%= msg %></span></div>
            <% } %>
            <div class="mb-3">
              <label for="email" class="form-label">Email address</label>
              <input type="email" class="form-control" id="email" aria-describedby="emailHelp" name="email" required autocomplete="off" placeholder="example@gmail.com">
              <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <button type="submit" class="btn">Login</button>
          </form>
    </div>

    <%- include('./partials/scripts')  %>
</body>
</html>
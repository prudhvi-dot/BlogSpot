<!DOCTYPE html>
<html lang="en">
<head>
   <%- include('./partials/head')  %>
   <link rel="stylesheet" href="/style.css">
   <title>Signup Page</title>
   <style>
    .container{
      height: 80vh;
    }
    .btn{
      margin-top: 25px;
    }
    .alert-danger{
      background-color: transparent;
      border: 1px solid rgb(225, 17, 17);
      color: rgb(225, 17, 17);
    }
   </style>
</head>
<body>
    <%- include('./partials/nav')  %>

    <div class="container mt-4 d-flex justify-content-center align-items-center">
        <form action="/user/signup" method="POST" novalidate class="needs-validation signup-form">
          <% if(msg!=''){ %>
            <div class="alert alert-danger" role="alert"><img src="/images/error.png" width="20px"> <span><%= msg %></span></div>
        <% } %>
            <div class="mb-3">
              <label for="fullName" class="form-label">Username</label>
              <input type="text" class="form-control" id="fullName" name="fullName" required required autocomplete="off">
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email address</label>
              <input type="email" class="form-control" id="email" aria-describedby="emailHelp" name="email" required placeholder="example@gmail.com" required autocomplete="off">
              <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <button type="submit" class="btn">Submit</button>
          </form>
    </div>

    <%- include('./partials/scripts')  %>
</body>
</html>